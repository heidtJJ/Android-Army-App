<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.armyapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustPan|stateHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Modules.Army_Knowledge_Mod.Module_Knowledge"
            android:theme="@style/ModuleTheme"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Quiz.QuizActivity"
            android:theme="@style/ModuleTheme"
            android:parentActivityName=".Modules.Army_Knowledge_Mod.Module_Knowledge" />
        <activity
            android:name=".Modules.Physical_Training_Mod.Module_PT"
            android:theme="@style/ThemePT"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Modules.Rifle_Marksman_Mod.Module_RM"
            android:theme="@style/ThemeRM"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Modules.Resiliency_Mod.Module_Resiliency"
            android:theme="@style/ThemeResiliency"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Modules.Return_From_Basic_Mod.Module_ReturnFromBasic"
            android:theme="@style/ThemeReturnFromBasic"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Modules.Who_We_Are_Mod.Module_WhoAreWe"
            android:theme="@style/ThemeWhoWeAre"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>